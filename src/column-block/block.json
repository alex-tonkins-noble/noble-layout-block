{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "noble-performs/layout-block-column-block",
	"version": "1.0.0",
	"title": "Column",
	"category": "custom",
	"icon": "columns",
	"description": "Column block for use within the Noble Layout Block.",
	"keywords": ["noble", "performs", "grid", "layout", "row", "column", "group"],
	"supports": {
		"reusable": false,
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"enableContrastChecker": true,
			"gradients": true,
			"link": true
		},
		"layout": {
			"allowVerticalAlignment": true
		},
		"align": true
	},
	"parent": ["noble-performs/layout-block"],
	"textdomain": "layout-block-column-block",
	"attributes": {
		"blockId": {
			"type": "string"
		},
		"size": {
			"type": "object",
			"default": {
				"colValue": 12,
				"rowValue": 1
			}
		},
		"breakpoints": {
			"type": "object",
			"default": {
				"sm": {
					"colValue": 12,
					"rowValue": 1,
					"enabled": false,
					"breakpointWidth": 576,
					"label": "Mobile"
				},
				"md": {
					"colValue": 12,
					"rowValue": 1,
					"enabled": false,
					"breakpointWidth": 768,
					"label": "Tablet"
				},
				"lg": {
					"colValue": 12,
					"rowValue": 1,
					"enabled": false,
					"breakpointWidth": 992,
					"label": "Desktop"
				}
			}
		},
		"verticalAlignment" : {
			"type": "string",
			"default": null
		}
	}
}
